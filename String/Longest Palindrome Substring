import java.util.Scanner;

public class Main {
    public static void main(String[] args) {

        Scanner sc = new Scanner(System.in);
        String str = sc.nextLine();

        int N = str.length();
        int maxLen = 1;
        int start = 0;

        boolean matrix[][] = new boolean[N][N];

        // Step 1: All substrings of length 1 are palindrome
        for (int index = 0; index < N; index++) {
            matrix[index][index] = true;
        }

        // Step 2: Check substrings of length 2
        for (int index = 0; index < N - 1; index++) {
            if (str.charAt(index) == str.charAt(index + 1)) {
                matrix[index][index + 1] = true;
                start = index;
                maxLen = 2;
            }
        }

        // Step 3: Check substrings of length >= 3
        for (int len = 3; len <= N; len++) {
            for (int index = 0; index <= N - len; index++) {

                int end = index + len - 1;

                if (str.charAt(index) == str.charAt(end)
                        && matrix[index + 1][end - 1]) {

                    matrix[index][end] = true;

                    if (len > maxLen) {
                        start = index;
                        maxLen = len;
                    }
                }
            }
        }

        // Print longest palindromic substring
        System.out.println(str.substring(start, start + maxLen));
    }
}
